/* pages/history/history.wxss */
page{
  background-color:#f5f5f5;
}
.newslist{
  margin-bottom: 10rpx;
}

.desc{
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
  overflow:hidden;
  color: #8B8989;
}
.title{
  font-weight: bold;
  font-size: 32rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
  font-family: Microsoft YaHei;
}
.news{
  margin-top: 20rpx;
  background-color:#DCDCDC;
}
.newsfooter{
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}
.author{
  float: right;
  font-size: 13px;
  margin-top: 8rpx;
}
