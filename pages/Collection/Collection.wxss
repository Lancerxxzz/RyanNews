/* pages/Collection/Collection.wxss */
page{
  background-color: #f5f5f5;
}
.newslist{
  margin-bottom: 10rpx;
}

.desc{
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
  overflow:hidden;
  color: #8B8989;
}
.title{
  font-weight: bold;
  font-size: 32rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
}
.news{
  margin-top: 20rpx;
  background-color:#DCDCDC;
}
.newsfooter{
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.author{
  float: right;
  font-size: 13px;
  margin-top: 8rpx;
}
.cancel{
  background-color: rgb(238,10,36);
  color: white;
  width: 140rpx;
  position: absolute;
display: flex;
align-items: center;
 text-align: center;
 height: 100%;
 padding: 10rpx;
}
