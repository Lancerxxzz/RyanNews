/* components/news.wxss */
page{
  background-color: #f5f5f5;
}

swiper{
  width: 100%;
  height: calc(100vw* 900 / 1920);
}
swiper image{
  width: 100%; 
}
.newslist{
  margin-bottom: 10rpx;
}
.tag{
    position: absolute;
    top: 0;
    padding: 0 4px;
    font-size: 12px;
    line-height: 16px;
    color: #fff;
    border-radius: 2px; 
    background-color: red;  
    border-top-right-radius: 16px;
    border-bottom-right-radius: 16px;
}
.desc{
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
  overflow:hidden;
  color: #8B8989;
  min-height: 96rpx;
}
.title{
  font-weight: bold;
  font-size: 32rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
  font-family: Microsoft YaHei;
}
.news{
  margin-top: 20rpx;
  background-color:#DCDCDC;
}
.newsfooter{
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.author{
  float: right;
  font-size: 13px;
  margin-top: 8rpx;
  padding-bottom: 20rpx;
}


.swipertitle{
  position: absolute;
  bottom:0;
  padding: 10rpx;
  background-color: rgba(34, 34, 32, 0.308);
  width: 100%;
}
 
/*文字样式*/
.swipertitle text{
  color: white;
  font-size: 28rpx;
}
.tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}
.tabclass{
  color: #C1CDCD;
}
.activeclass{
  color: black;
}
.nav{
clear: both;
}

